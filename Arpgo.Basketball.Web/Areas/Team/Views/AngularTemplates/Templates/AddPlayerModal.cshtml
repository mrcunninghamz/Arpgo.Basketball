<div id="addPlayer" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add a Player</h4>
            </div>
            <div class="modal-body">
                <form name="form" novalidate>
                    <div class="row">
                        <div class="form-group col-md-3" show-errors>
                            <label for="Number" class="control-label">Player Number</label>
                            <input type="text" name="Number" class="form-control" ng-model="Model.Number" ng-required="true" />
                            <span ng-show="(form.$submitted || form.Number.$touched) && form.Number.$error.required" class="help-block">Please enter your player's Number</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6" show-errors>
                            <label for="FirstName" class="control-label">First Name</label>
                            <input type="text" name="FirstName" class="form-control" ng-model="Model.FirstName" ng-required="true"/>
                            <span ng-show="(form.$submitted || form.FirstName.$touched) && form.FirstName.$error.required" class="help-block">Please enter player's First Name</span>
                        </div>
                        <div class="form-group col-md-6" show-errors>
                            <label for="LastName" class="control-label">Last Name</label>
                            <input type="text" name="LastName" class="form-control" ng-model="Model.LastName" ng-required="true"/>
                            <span ng-show="(form.$submitted || form.LastName.$touched) && form.LastName.$error.required" class="help-block">Please enter your player's Last Name</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12" show-errors>
                            <label for="Email" class="control-label">Email</label>
                            <input type="text" name="Email" class="form-control" ng-model="Model.Email" ng-required="true" />
                            <span ng-show="(form.$submitted || form.Email.$touched) && form.Email.$error.required" class="help-block">Please enter player's First Name</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Add Player</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->