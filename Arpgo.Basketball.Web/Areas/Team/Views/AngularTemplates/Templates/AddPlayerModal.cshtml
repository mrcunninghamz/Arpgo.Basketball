<div id="addPlayer" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add a Player</h4>
            </div>
            <div class="modal-body">
                <form name="form" novalidate>
                    <div class="row">
                        <div class="form-group col-md-3" show-errors>
                            <input type="hidden" name="Team_Id" ng-model="Player.Data.Team_Id" />
                            <label for="Number" class="control-label">Player Number</label>
                            <input type="number" name="Number" class="form-control" ng-model="Player.Data.Number" 
                                   ng-required="true" max="99" min="0" maxlength="2" player-number-check-exists="form.Number" team-id="form.Team_Id" />
                            <span ng-show="(form.$submitted || form.Number.$touched) && form.Number.$error.required" class="help-block">Please enter your player's Number</span>
                            <span ng-show="(form.$submitted || form.Number.$touched) && form.Number.$error.number" class="help-block">Must be a number</span>
                            <span ng-show="(form.$submitted || form.Number.$touched) && form.Number.$error.min || form.Number.$error.max " class="help-block">Must be between 0-99</span>
                            <span ng-show="(form.$submitted || form.Number.$touched) && form.Number.$error.numberAvailable" class="help-block">Number already taken</span>
                            <span ng-show="(form.$submitted || form.Number.$touched) && form.Number.$error.maxlength" class="help-block">Number format: 00-99 or 1-99</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6" show-errors>
                            <label for="FirstName" class="control-label">First Name</label>
                            <input type="text" name="FirstName" class="form-control" ng-model="Player.Data.FirstName" ng-required="true"/>
                            <span ng-show="(form.$submitted || form.FirstName.$touched) && form.FirstName.$error.required" class="help-block">Please enter player's First Name</span>
                        </div>
                        <div class="form-group col-md-6" show-errors>
                            <label for="LastName" class="control-label">Last Name</label>
                            <input type="text" name="LastName" class="form-control" ng-model="Player.Data.LastName" ng-required="true"/>
                            <span ng-show="(form.$submitted || form.LastName.$touched) && form.LastName.$error.required" class="help-block">Please enter your player's Last Name</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12" show-errors>
                            <label for="Email" class="control-label">Email</label>
                            <input type="email" name="Email" class="form-control" ng-model="Player.Data.Email" ng-required="true" user-check-exists="form.Email"/>
                            <span ng-show="(form.$submitted || form.Email.$touched) && form.Email.$error.required" class="help-block">Please enter player's email address</span>
                            <span ng-show="(form.$submitted || form.Email.$touched) && form.Email.$error.email" class="help-block">Please enter a valid email address</span>
                            <span ng-show="(form.$submitted || form.Email.$touched) && form.Email.$error.userAvailable" class="help-block">Email already taken</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="reset()" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" ng-click="add(Player.Data)">Add Player</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->